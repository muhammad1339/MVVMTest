<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainVG"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ui.main.view.activity.MainActivity">

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/rb_button_back_state"
            android:button="@null"
            android:drawableStart="@drawable/ic_visa"
            android:drawableEnd="@drawable/rb_button_checked_state"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:padding="16dp"
            android:text="@string/visa"
            android:textColor="@color/rb_check_text_color_state"
            android:textSize="18sp"
            app:useMaterialThemeColors="false" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/rb_button_back_state"
            android:button="@null"
            android:drawableStart="@drawable/payoneer"
            android:drawableEnd="@drawable/rb_button_checked_state"
            android:drawablePadding="8dp"
            android:elevation="2dp"
            android:padding="16dp"
            android:text="@string/master_card"
            android:textColor="@color/rb_check_text_color_state"
            android:textSize="18sp" />

    </RadioGroup>

    <!--    <CheckBox-->
    <!--        android:layout_width="25dp"-->
    <!--        android:layout_height="25dp"-->
    <!--        android:button="@drawable/cb_selection_button"-->
    <!--        app:useMaterialThemeColors="false" />-->

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/editLayoutSiteName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/site_name"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="1dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editSiteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnFetchAnswers"
        style="?attr/materialButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/fetch_answers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editLayoutSiteName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvStackAnswers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="8dp" />
</LinearLayout>